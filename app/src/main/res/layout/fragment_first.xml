<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/header_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/cursos"
            android:textSize="64sp"
            app:layout_constraintBottom_toTopOf="@+id/tablaCursos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:id="@+id/tablaCursos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="320dp">

                <ImageButton
                    android:id="@+id/imagebutton_curso1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@android:drawable/stat_sys_download"
                    android:visibility="visible"
                    tools:ignore="ImageContrastCheck"
                    tools:src="@tools:sample/avatars"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/curso1_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:text="@string/curso_1"
                    android:textColor="#455A64"
                    android:textSize="32sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imagebutton_curso2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@android:drawable/stat_sys_download"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/curso2_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:text="@string/curso_2"
                    android:textColor="#455A64" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imagebutton_curso3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@android:drawable/stat_sys_download"
                    tools:ignore="ImageContrastCheck"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/curso3_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:text="@string/curso_3"
                    android:textColor="#455A64" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/imagebutton_curso4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@android:drawable/stat_sys_download"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/curso4_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:text="@string/curso_4"
                    android:textColor="#455A64" />

            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>